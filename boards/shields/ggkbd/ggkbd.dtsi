#include <dt-bindings/zmk/matrix_transform.h>
#include "ggkbd-layouts.dtsi"

&default_layout {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &default_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
        //  LKey 1 |LKey 2 |LKey 3 |LKey 4 |LKey 5 |LKey 6      RKey 6  |RKey 5  |RKey 4 |RKey 3 |RKey 2 |RKey 1  
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)     RC(0,11) RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6) 
        //  LKey 7 |LKey 8 |LKey 9 |LKey 10|LKey 11|LKey 12     RKey 6  |RKey 7  |RKey 8 |RKey 9 |RKey 10|RKey 10  
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)     RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6) 
        //  LKey 13|LKey 14|LKey 15|LKey 16|LKey 17|LKey 18     RKey 11 |RKey 12 |RKey 13|RKey 14|RKey 15|RKey 15 
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6) 
        //  LKey 19|LKey 20|LKey 21|LKey 22|LKey 23|LKey 24     RKey 11 |RKey 12 |RKey 13|RKey 14|RKey 15|RKey 15 
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)     RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7) RC(3,6) 
        //                          LKey 25|LKey 26|LKey 27     RKey 16 |RKey 17 |RKey 17
                                    RC(4,3) RC(4,4) RC(4,5)     RC(4,11) RC(4,10) RC(4,9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        col-gpios
            = <&pro_micro 8 (GPIO_ACTIVE_HIGH)> // COL0
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH)> // COL1
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH)> // COL2
            , <&pro_micro 9 (GPIO_ACTIVE_HIGH)> // COL3
            , <&pro_micro 10 (GPIO_ACTIVE_HIGH)> // COL4
        ;
        row-gpios
            = <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW0
            , <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW1
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW2
            , <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // ROW3
        ;
    };
};
